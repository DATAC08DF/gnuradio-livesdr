#!/bin/sh

LWR=$ROOTFS_SRCDIR/pybombs/recipes/gnss-sdr
/root/live/bin/print-msg info "Adding ENABLE_GENERIC_ARCH to config"
# spaces are important
# also, config_opt must come before inherit cmake
sed -i -e '/gitrev:/a var config_opt = " -DENABLE_GENERIC_ARCH=ON "' $LWR

### Call PyBOMBS install
/root/live/bin/do-pybombs-install gnss-sdr 9b95919d bin/gnss-sdr
