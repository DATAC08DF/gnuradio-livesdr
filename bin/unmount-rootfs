#!/bin/sh
set -o nounset
#set -x #DEBUG

. config/config-vars
. bin/functions.sh

# Unmount root filesystem read-write overlay mount if needed
test_rootfs_rw_mounted && {
    # Unmount overlay
    echo Unmounting squashfs root filesystem read-write overlay.
    $SUDO $UMOUNT -l $ROOTFSMNT_RW || {
        echo Failed to unmount root filesystem overlay!
        exit 1
    }
}

# Unmount root filesystem read-only mount if needed
test_rootfs_ro_mounted && {
    # Unmount image
    echo Unmounting squashfs root filesystem.
    $SUDO $UMOUNT -l $ROOTFSMNT_RO || {
        echo Failed to unmount root filesystem image!
        exit 1
    }
}

exit 0
