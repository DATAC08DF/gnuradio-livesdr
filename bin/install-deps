#!/bin/sh
set -o nounset
#set -x #DEBUG

SUDO=/usr/bin/sudo

echo Installing utility packages for build if needed...
$SUDO apt-get install \
      curl \
      gnupg \
      coreutils \
      squashfs-tools \
      genisoimage \
      syslinux || {
    echo Package installation failed!
    exit 1
}

echo Add PPA repository and kconfig-frontends packages if needed...
$SUDO apt-add-repository ppa:george-hopkins/kconfig-frontends || {
    echo Unable to install kconfig-frontends!
    exit 1
}

echo done.
exit 0
