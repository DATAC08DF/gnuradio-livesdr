#!/bin/sh
set -o nounset
#set -x #DEBUG

. ./.config
. config/config-vars
. bin/functions.sh

$PRINTINFO Installing utility packages for build if needed...
$SUDO apt-get install \
     curl \
     gnupg \
     coreutils \
     squashfs-tools \
     ccache \
     genisoimage \
     syslinux || {
    $PRINTERROR Package installation failed!
    exit 1
}

$PRINTINFO Add PPA repository and kconfig-frontends packages if needed...
$SUDO apt-add-repository ppa:george-hopkins/kconfig-frontends || {
    $PRINTERROR Unable to install kconfig-frontends!
    exit 1
}

$PRINTSUCCESS done.
exit 0
