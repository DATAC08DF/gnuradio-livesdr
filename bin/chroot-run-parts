#!/bin/sh
set -o nounset
#set -x #DEBUG

cd $SCRIPT_BINDDIR
. bin/chroot-library.sh

# Exit if nothing to do
[ -n "$(ls config/chroot.d)" ] || exit 0

# The scripts will get the rest of their configuration from
# config/chroot-vars
export SCRIPT_BINDDIR=$SCRIPT_BINDDIR

# Execute each fragment in config/clean-rootfs.d
printinfo Executing chroot customization scripts...
run-parts \
    --exit-on-err \
    config/chroot.d || die One or more chroot customization scripts failed!

exit 0
